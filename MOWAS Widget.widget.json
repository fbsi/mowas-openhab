{
    "author": "Fabian S",
    "name": "MOWAS Widget",
    "description": "",
    "settings": [
        {
            "type": "item",
            "label": "openHAB Item",
            "id": "item"
        },
        {
            "type": "item",
            "id": "msgtype",
            "label": "Message Type Item (String Item)"
        },
        {
            "type": "item",
            "id": "hdln",
            "label": "Headline Item"
        }
    ],
    "template": "<style>\n\n  .attention-active {\n    animation-name: attention;\n    animation-duration: 0.5s;\n    animation-iteration-count: infinite;\n \t\theight: 100%;\n  }\n   @keyframes attention {\n    50%  {background-color: transparent;}\n    100%  {background-color: red;}\n\t}\n \n  .attention-div {\n  \theight: 100%;\n  }\n  .attention-table-cell {\n  \tpadding: 5px;\n  \twidth: 50%;\n  }\n  .entw-active {\n    animation-name: entw;\n    animation-duration: 0.5s;\n    animation-iteration-count: infinite;\n \t\theight: 100%;\n  }\n   @keyframes entw {\n    50%  {background-color: transparent;}\n    100%  {background-color: green;}\n\t}\n \n  .entw-div {\n  \theight: 100%;\n  }\n  .aentw-table-cell {\n  \tpadding: 5px;\n  \twidth: 50%;\n  }\n  .upd-active {\n    animation-name: upd;\n    animation-duration: 0.5s;\n    animation-iteration-count: infinite;\n \t\theight: 100%;\n  }\n   @keyframes upd {\n    50%  {background-color: transparent;}\n    100%  {background-color: yellow;}\n\t}\n \n  .upd-div {\n  \theight: 100%;\n  }\n  .upd-table-cell {\n  \tpadding: 5px;\n  \twidth: 50%;\n  }\n</style>\n\n<div ng-switch=\"itemState(config.msgtype)\">\n    <!-- the same view can be shown in more than one case -->\n    <div ng-switch-when=\"Alert\">\n        <div ng-class=\"'attention-active'\" style=\"top:0;bottom:0;left:0;right:0;position:absolute;\"\n            class=\"template-container\">\n            <div class=\"template-contents\">\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span style=\"font-size: 18pt; text-align:center\">{{ngModel.name}}</span>\n                    </div>\n                </div>\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span\n                            style=\"font-size: 12pt; text-align:center\">{{itemState(config.hdln)}}</span></div>\n                </div>\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span\n                            style=\"color: #4CC417; font-size: 18pt; text-align:center\">{{itemState(config.item)}}</span>\n                    </div>\n                </div>\n            </div>\n        </div>\n    </div>\n    <div ng-switch-when=\"Cancel\">\n        <div ng-class=\"'entw-active'\" style=\"top:0;bottom:0;left:0;right:0;position:absolute\"\n            class=\"template-container\">\n            <div class=\"template-contents\">\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span style=\"font-size: 18pt; text-align:center\">{{ngModel.name}}</span>\n                    </div>\n                </div>\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span\n                            style=\"font-size: 12pt; text-align:center\">{{itemState(config.hdln)}}</span></div>\n                </div>\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span\n                            style=\"color: #4CC417; font-size: 18pt; text-align:center\">{{itemState(config.item)}}</span>\n                    </div>\n                </div>\n            </div>\n        </div>\n    </div>\n    <div ng-switch-when=\"Update\">\n        <div ng-class=\"'upd-active'\" style=\"top:0;bottom:0;left:0;right:0;position:absolute\" class=\"template-container\">\n            <div class=\"template-contents\">\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span style=\"font-size: 18pt; text-align:center\">{{ngModel.name}}</span>\n                    </div>\n                </div>\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span\n                            style=\"font-size: 12pt; text-align:center\">{{itemState(config.hdln)}}</span></div>\n                </div>\n                <div class=\"row\">\n                    <div class=\"col-xs-12\"><span\n                            style=\"color: #4CC417; font-size: 18pt; text-align:center\">{{itemState(config.item)}}</span>\n                    </div>\n                </div>\n            </div>\n        </div>\n    </div>\n    <!--default case when there are no matches -->\n    <div ng-switch-default>\n\n        <div class=\"template-contents\">\n            <div class=\"row\">\n                <div class=\"col-xs-12\"><span style=\"font-size: 18pt; text-align:center\">{{ngModel.name}}</span></div>\n            </div>\n            <div class=\"row\">\n                <div class=\"col-xs-12\"><span\n                        style=\"font-size: 12pt; text-align:center\">{{itemState(config.hdln)}}</span></div>\n            </div>\n            <div class=\"row\">\n                <div class=\"col-xs-12\"><span\n                        style=\"color: #4CC417; font-size: 18pt; text-align:center\">{{itemState(config.item)}}</span>\n                </div>\n            </div>\n        </div>\n    </div>\n</div>\n\n\n\n",
    "source_url": "https://raw.githubusercontent.com/jmsjones/habpanel-widgets/master/attention-with-button.widget.json",
    "readme_url": "https://github.com/jmsjones/habpanel-widgets"
}